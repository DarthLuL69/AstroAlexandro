---
export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}
const { title, description, image, link } = Astro.props;
---
<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white dark:bg-gray-800">
  <img class="w-full" src={image} alt={title} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-gray-800 dark:text-gray-200">{title}</div>
    <p class="text-gray-600 dark:text-gray-400">{description}</p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <a href={link} class="text-blue-500 dark:text-blue-300">View Project</a>
  </div>
</div>
