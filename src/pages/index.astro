---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Proyects from '../components/Proyects.astro';

const featuredProjects = []; 
const featuredPosts = []; 
---
<Layout title="Mi Portfolio Personal">
  <Header />
  <main class="max-w-3xl mx-auto px-4 sm:px-6 pt-4 sm:pt-8">
    <section class="mb-8 sm:mb-16">
      <h1 class="text-4xl sm:text-6xl font-bold font-serif mb-2 text-[rgb(var(--color-text-main))]">
        Alex
      </h1>
      <p class="text-lg sm:text-xl mb-6 sm:mb-8 text-[rgb(var(--color-text-main))]">
        Alexandro Suciu Peici
      </p>
      <h2 class="text-3xl sm:text-4xl font-bold font-serif leading-snug mb-6 text-[rgb(var(--color-text-main))]">
        Hi There & Welcome to My Portfolio!
      </h2>
      <div class="mb-6">
        <img 
          src="https://images.unsplash.com/photo-1587620962725-abab7fe55159?w=800&auto=format&fit=crop&q=60" 
          alt="Developer coding on a modern laptop"
          class="w-full rounded"
          width="800"
          height="400"
        />
      </div>
      <p class="text-lg leading-relaxed mb-6 font-serif text-[rgb(var(--color-text-main))]">
        I'm <strong>Alexandro Suciu Peici</strong>, a web developer dedicated to creating amazing web experiences. 
        My approach involves embracing intuition, conducting just enough research, and leveraging 
        aesthetics as a catalyst for exceptional products. Feel free to explore some of my coding 
        endeavors on <a href="https://github.com/yourusername" class="text-blue-600 underline">GitHub</a> or 
        follow me on <a href="https://twitter.com/yourusername" class="text-blue-600 underline">Twitter/X</a>.
      </p>
      <a 
        href="/contact" 
        class="px-6 py-2 border border-[rgb(var(--color-text-main))] rounded-full text-[rgb(var(--color-text-main))] hover:bg-[rgb(var(--color-text-main))] hover:text-[rgb(var(--color-bg-main))] transition inline-block"
      >
        Get in Touch
      </a>
    </section>

    <section class="py-8 sm:py-16">
      <h2 class="text-2xl font-bold font-serif mb-8 text-[rgb(var(--color-text-main))]">Projects</h2>
      <Proyects />
      <div class="mt-12">
        <a 
          href="/proyects" 
          class="px-6 py-2 border border-[rgb(var(--color-text-main))] rounded-full text-[rgb(var(--color-text-main))] hover:bg-[rgb(var(--color-text-main))] hover:text-[rgb(var(--color-bg-main))] transition inline-block"
        >
          View All Projects
        </a>
      </div>
    </section>

    {featuredPosts?.length > 0 && (
      <section class="mb-16 sm:mb-24">
        <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-2xl">Writing</h2>
        <div class="mt-12 sm:mt-16 text-center">
          <a 
            href="/blog" 
            class="inline-block px-6 py-3 border border-[rgb(var(--color-border-main))] hover:bg-[rgb(var(--color-bg-muted))] transition-colors duration-200"
          >
            View All Posts
          </a>
        </div>
      </section>
    )}
  </main>
  <Footer />
</Layout>
