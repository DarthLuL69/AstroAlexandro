---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Proyects from '../components/Proyects.astro';

const featuredProjects = []; // Placeholder for future collection integration
const featuredPosts = []; // Placeholder for future collection integration
---
<Layout title="Mi Portfolio Personal">
  <Header />
  <main class="max-w-3xl mx-auto px-6 pt-8">
    {/* Hero Section */}
    <section class="mb-16">
      <h2 class="text-4xl font-bold font-serif leading-snug mb-6">
        Hi There & Welcome to My Corner of the Web!
      </h2>
      <div class="mb-6">
        <img 
          src="/images/foto-persona.jpg"  
          alt="Developer portrait"
          class="w-full rounded"
          width="800"
          height="400"
        />
      </div>
      <p class="text-lg leading-relaxed mb-6 font-serif">
        I'm <strong>Your Name</strong>, a web developer dedicated to creating amazing web experiences. 
        My approach involves embracing intuition, conducting just enough research, and leveraging 
        aesthetics as a catalyst for exceptional products. Feel free to explore some of my coding 
        endeavors on <a href="https://github.com/yourusername" class="text-blue-600 underline">GitHub</a> or 
        follow me on <a href="https://twitter.com/yourusername" class="text-blue-600 underline">Twitter/X</a>.
      </p>
      <a 
        href="/contact" 
        class="px-6 py-2 border border-[rgb(var(--color-text-main))] rounded-full text-[rgb(var(--color-text-main))] hover:bg-[rgb(var(--color-text-main))] hover:text-[rgb(var(--color-bg-main))] transition inline-block"
      >
        Get in Touch
      </a>
    </section>

    {/* Projects Section */}
    <section class="py-16">
      <h2 class="text-2xl font-bold font-serif mb-8">Projects</h2>
      <Proyects />
      <div class="mt-12">
        <a 
          href="/proyects" 
          class="px-6 py-2 border border-[rgb(var(--color-border-main))] rounded-full text-[rgb(var(--color-text-main))] hover:bg-[rgb(var(--color-text-main))] hover:text-[rgb(var(--color-bg-main))] transition inline-block"
        >
          View All Projects
        </a>
      </div>
    </section>

    {/* Optional Blog Posts Section */}
    {featuredPosts?.length > 0 && (
      <section class="mb-16 sm:mb-24">
        <h2 class="mb-12 text-xl font-serif italic sm:mb-16 sm:text-2xl">Writing</h2>
        {/* Add your PostPreview component here when ready */}
        <div class="mt-12 sm:mt-16 text-center">
          <a 
            href="/blog" 
            class="inline-block px-6 py-3 border border-[rgb(var(--color-border-main))] hover:bg-[rgb(var(--color-bg-muted))] transition-colors duration-200"
          >
            View All Posts
          </a>
        </div>
      </section>
    )}
  </main>
  <Footer />
</Layout>
